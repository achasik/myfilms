html
  body
    h1= title
    div
      ul
        each film in films
          li
            div(style= {width:'520px', padding:'20px'})
              div
                strong=film.name + ' / '+ film.nameRu +' '+ film.year
                a(href='/detail/'+film.id+'?key=0897sa')
                  img(src='https://image.tmdb.org/t/p/w342'+film.poster)            
              div=film.description

